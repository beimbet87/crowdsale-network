<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_message_date"
        style="@style/TextView.Style.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_gray"
        android:padding="6dp"
        android:text="13.12.2020" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/message_to_admin"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Предложение бронирования"
                android:textColor="@color/color_primary_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Style.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата заезда:" />

                <TextView
                    android:id="@+id/tv_date_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 дек 2020"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    style="@style/TextView.Style.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата выезда:" />

                <TextView
                    android:id="@+id/tv_date_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 дек 2020"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Style.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стоимость в сутки:" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400 000 ₸"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    style="@style/TextView.Style.Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Итоговая сумма:" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400 000 ₸"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Принято и оплачено"
            android:textColor="@color/color_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="13:52"
            android:textColor="#7F7F7F"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>