<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/intro_input_background" />

                <ImageView
                    android:id="@+id/iv_vr360"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_vr360"
                    android:visibility="gone"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <RatingBar
            android:id="@+id/rating_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="1"
            android:stepSize="0.1"
            android:theme="@style/customRatingBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Уютная 2к квартира в це.."
            android:textColor="@color/registerButtonColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ул. Некрасова, 32А"
            android:textColor="#6F6F6F"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:text="330 000 ₸"
            android:textColor="@color/color_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <www.kaznu.kz.projects.m2.views.FlowLayout
            android:id="@+id/offer_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>