<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="56dp"
            tools:ignore="RtlSymmetry">

            <Button
                android:id="@+id/toolbar_back"
                style="@style/Button.Style.Back"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/complete_registration"
                android:textColor="@color/registerButtonColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Завершите регистрацию"
                android:textColor="@color/color_primary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заполните всю информацию, чтобы получить доступ к полному функционалу"
                android:textColor="#7F7F7F"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/registration"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:background="@drawable/background_clicked"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_bottom">

                    <ImageView
                        android:id="@+id/registration_checked"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_enabled_checkbox" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:text="Регистрация"
                        android:textColor="@color/color_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_info"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/main_info_checked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_enabled_checkbox" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Основная информация"
                    android:textColor="@color/color_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/spinner_arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_user"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/about_user_checked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_enabled_checkbox" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Расскажите о себе"
                    android:textColor="@color/color_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/spinner_arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_methods"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/payment_methods_checked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_disabled_checkbox" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Способы оплаты"
                    android:textColor="@color/color_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/spinner_arrow" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>