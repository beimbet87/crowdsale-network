<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Default" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/color_primary_dark</item>
        <item name="android:textColorHint">@color/color_primary_hint</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="radioButtonStyle">@style/RadioButton.Style</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActivityTransitions">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/color_primary_hint</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">#F2F2F2</item>
        <!--        <item name="android:background">@drawable/spinner_icon</item>-->
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="customRatingBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorRatingBarNormal</item>
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="CalendarViewStyle" parent="android:Widget.Material.CalendarView">
        <item name="android:focusedMonthDateColor">@color/color_primary_dark</item>
        <item name="android:weekNumberColor">@color/color_primary</item>
        <item name="android:calendarTextColor">@color/color_primary_dark</item>
        <item name="android:selectedWeekBackgroundColor">@color/color_primary</item>
        <!--        <item name="android:weekDayTextAppearance">@style/TextAppearance.Medium</item>-->
        <!--        <item name="android:dateTextAppearance">@style/TextAppearance.Medium</item>-->
    </style>

    <style name="CalendarWeekDateText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Buttons style -->
    <style name="Button.Style.DarkBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:background">@drawable/button_background_dark_blue</item>
        <item name="android:backgroundTint">@color/color_primary_dark</item>
    </style>

    <style name="Button.Style.Disabled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:background">@drawable/next_button_disable_background</item>
        <item name="android:backgroundTint">#C2C5CC</item>
    </style>

    <style name="RadioButton.Style" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:button">@drawable/radio_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Style.LightBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="android:textStyle">bold</item>
        <item name="height">48dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:background">@drawable/button_background_light_blue</item>
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingStart">@dimen/profile_rating_margin</item>
        <item name="android:paddingEnd">@dimen/profile_rating_margin</item>
    </style>

    <style name="Button.Style.Back" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:drawableEnd">@drawable/back_button</item>
        <item name="android:paddingStart">@dimen/profile_rating_margin</item>
        <item name="android:paddingEnd">@dimen/profile_rating_margin</item>
    </style>


    <style name="Button.Style.Edit" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:drawableEnd">@drawable/ic_edit</item>
        <item name="android:paddingStart">@dimen/profile_rating_margin</item>
        <item name="android:paddingEnd">@dimen/profile_rating_margin</item>
    </style>

    <style name="Button.Style.Like" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size2</item>
        <item name="android:textStyle">bold</item>

        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:drawableEnd">@drawable/ic_heart</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">11dp</item>
    </style>

    <style name="Button.Style.Intro" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/intro_button_background</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingStart">@dimen/profile_rating_margin</item>
        <item name="android:paddingEnd">@dimen/profile_rating_margin</item>
    </style>

    <style name="Button.Style.Toggle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/background_toggle</item>
        <item name="android:textColor">@color/color_toggle</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Style.Toggle.Transparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/background_toggle_transparent</item>
        <item name="android:backgroundTint">@drawable/background_toggle_transparent</item>
        <item name="android:textColor">@color/color_toggle</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText.Style.Price" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/intro_input_phone_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textColorHint">@color/color_primary_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditText.Style.Email" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/intro_input_phone_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textColorHint">@color/color_primary_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditText.Style.Intro" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/intro_input_background</item>
        <item name="android:ems">10</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="EditText.Style.Profile" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/view_profile_button_background</item>
        <item name="android:ems">10</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TextView.Style.Hint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_primary_hint</item>
    </style>

    <style name="TextView.Style.Hint.DarkBlue" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="TextView.Style.FullName" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="TextView.Style.Blue" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextView.Style.BigBlue" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Dialog.Style.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
    </style>

    <style name="Dialog.Style.DatePicker" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:windowBackground">@color/color_primary_dark</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textColorSecondary">@color/color_primary_dark</item>
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@color/color_primary_dark</item>
    </style>

</resources>
