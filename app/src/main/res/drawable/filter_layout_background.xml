<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:endColor="#00000000" android:gradientRadius="20dp" android:startColor="#33000000" android:type="radial" />
                    <corners android:radius="24dp" />
                </shape>
            </item>

            <item android:bottom="4dp" android:left="0dp" android:right="0dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="24dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>