<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list >
            <item android:bottom="3dp" android:left="3dp" android:right="11dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/color_primary_gray" />
                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="3dp" android:left="3dp" android:right="9dp" android:top="3dp">
                <shape android:shape="oval" >
                    <solid android:color="@color/color_primary_gray" />
                    <size android:width="18dp" android:height="18dp" />
                </shape>
            </item>

            <item android:bottom="6dp" android:left="6dp" android:right="12dp" android:top="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/color_primary" />
                    <size android:width="12dp" android:height="12dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>